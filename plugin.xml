<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-touch-id"
        version="3.3.1">

  <name>Touch ID</name>

  <description>
    Scan the fingerprint of your user with the BiometricKeychain sensor (iPhone 5S, iPhone 6(S), ..)
  </description>

  <author>Eddy Verbruggen</author>

  <license>MIT</license>

  <keywords>BiometricKeychain, Touch ID, Fingerprint, Biometric</keywords>

  <repo>https://github.com/EddyVerbruggen/cordova-plugin-touchid.git</repo>

  <issue>https://github.com/EddyVerbruggen/cordova-plugin-touchid/issues</issue>

  <engines>
    <engine name="cordova" version=">=3.0.0"/>
  </engines>

  <js-module src="www/BiometricKeychain.js" name="BiometricKeychain">
    <clobbers target="window.plugins.BiometricKeychain" />
  </js-module>

  <!-- ios -->
  <platform name="ios">

    <config-file target="config.xml" parent="/*">
      <feature name="BiometricKeychain">
        <param name="ios-package" value="BiometricKeychain"/>
      </feature>
    </config-file>

    <!-- Usage description of Face ID for iOS 11+ -->
    <preference name="FACEID_USAGE_DESCRIPTION" default=" " />
    <config-file target="*-Info.plist" parent="NSFaceIDUsageDescription">
      <string>$FACEID_USAGE_DESCRIPTION</string>
    </config-file>

    <framework src="LocalAuthentication.framework" />
    <framework src="Security.framework" />

    <header-file src="src/ios/BiometricKeychain.h"/>
    <source-file src="src/ios/BiometricKeychain.m"/>
  </platform>

</plugin>
